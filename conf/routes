# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /login                      controllers.Application.login()
GET     /mainpage                   controllers.Application.mainpage()
GET     /changepass                 controllers.Application.changepass()
GET     /board                      controllers.Application.board()
GET     /thanks                     controllers.Application.thanks()
GET     /cardview                   controllers.Application.cardview()
GET     /example                    controllers.Application.example()
GET     /createmp                   controllers.Application.createmp()
GET     /changemp                   controllers.Application.changemp()
GET     /category                   controllers.Application.category()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
