# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /login       controllers.Authentication.login()
POST    /login       controllers.Authentication.authenticate()

GET     /logout      controllers.Authentication.logout()

GET     /password       controllers.Application.password()

GET     /board       controllers.Application.board()
GET     /cardview       controllers.Application.cardview()
GET     /category     controllers.Application.category()
GET     /changemp       controllers.Application.changemp()
GET     /complete       controllers.Application.complete()
GET     /createmp       controllers.Application.createmp()
GET     /detail       controllers.Application.detail()
GET     /example       controllers.Application.example()
GET     /thanks       controllers.Application.thanks()
POST    /thanks       controllers.Application.addthanks()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

